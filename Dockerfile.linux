COPY          --from=builder-docker     /dist /dist
COPY          --from=builder-terraform  /dist /dist
COPY          --from=builder-nerdctl    /dist /dist

# RUN           [ "$TARGETARCH" != "amd64" ] || export STACK_CLASH=true; \
