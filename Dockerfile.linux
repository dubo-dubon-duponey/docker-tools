ARG           TARGETARCH
ARG           TARGETVARIANT

COPY          --from=builder-healthcheckers /dist/boot/bin /dist/boot/bin
COPY          --from=builder-goello /dist/boot/bin /dist/boot/bin
COPY          --from=builder-caddy /dist/boot/bin /dist/boot/bin

